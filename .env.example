# RFQ Automation - Environment Variables
# Copy this file to .env and fill in your API keys

# Firecrawl API (required for contact discovery)
FIRECRAWL_API_KEY=fc-your-api-key-here

# OpenRouter LLM (required for classify-thread, extract-quote, draft-reply)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_MODEL=google/gemini-2.5-flash-lite

# API Authentication (optional - protects Phase 2 endpoints)
RFQ_API_KEY=

# Email (optional - for email monitor features)
EMAIL_ADDRESS=
EMAIL_APP_PASSWORD=

# SAM.gov (optional - free key from api.sam.gov)
SAM_GOV_API_KEY=
SAM_GOV_PAGE_SIZE=25
SAM_GOV_DETAIL_TIMEOUT=15000
SAM_GOV_MAX_DETAIL_PAGES=10
SAM_GOV_ENRICH_CONTACTS=true

# Canada Buys (optional)
CANADA_BUYS_FEED_URL=https://canadabuys.canada.ca/opendata/pub/openTenderNotice-ouvertAvisAppelOffres.csv

# Timeouts and rate limiting (optional - sensible defaults)
SCRAPE_TIMEOUT=30000
FIRECRAWL_TIMEOUT=30000
FIRECRAWL_CONCURRENCY=3            # Max concurrent Firecrawl lookups per NSN
MAX_RETRIES=3
RETRY_DELAY=1000
BATCH_DELAY=500

# Logging (optional)
LOG_FORMAT=json      # "json" (production) or "pretty" (colored local dev)
LOG_LEVEL=INFO

# Browser settings (optional)
HEADLESS=true
MAX_BROWSER_PAGES=4           # Max concurrent pages in shared browser pool (FastAPI only)
BROWSER_POOL_TIMEOUT=120      # Max seconds to wait for a pool slot (default 120)
